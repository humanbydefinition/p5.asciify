{
  "compilerOptions": {
    "target": "ESNext", 

    "importHelpers": true,
    
    // Let the bundler produce UMD/ES out of ESNext modules
    "module": "ESNext",  
    "moduleResolution": "Node",

    "allowJs": true,

    "lib": ["DOM", "ESNext"],

    // Generate .d.ts files
    "declaration": true,
    "declarationMap": false,     // or true if you want .d.ts.map
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    
    // Output compiled .js and .d.ts to /dist
    "outDir": "dist",            
    "rootDir": "src/lib",

    // Interop settings
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Type-checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": [
      "vite-plugin-glsl/ext"
    ]

  },
  "include": ["src/lib", "src/types"]
}
